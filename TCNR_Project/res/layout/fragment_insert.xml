<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/top"
        android:text="@string/tname"
        android:textSize="@dimen/top" />

    <EditText
        android:id="@+id/edtname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/TextView1"
        android:layout_toRightOf="@+id/TextView1" />

    <TextView
        android:id="@+id/TextView2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/TextView1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="@string/tbioup"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edtbioup"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/TextView2"
        android:layout_toRightOf="@id/TextView2"
        android:inputType="number" />

    <TextView
        android:id="@+id/TextView3"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/TextView2"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/edtbioup"
        android:text="@string/tbiodw"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edtbiodw"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/TextView3"
        android:layout_toRightOf="@id/TextView3"
        android:inputType="number" />
    
       <TextView
        android:id="@+id/TextView4"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/TextView2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/top"
        android:text="@string/thear"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edthear"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/TextView4"
        android:layout_toRightOf="@id/TextView4"
        android:inputType="number" />

    <TextView
        android:id="@+id/TextView5"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/TextView4"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/edthear"
        android:text="@string/tweg"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edtweg"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/TextView5"
        android:layout_toRightOf="@id/TextView5"
        android:inputType="number" />
    
    <TextView
        android:id="@+id/TextView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/TextView4"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="@string/tdtime"
        android:textSize="@dimen/top" />

    <TextView
        android:id="@+id/dtime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/TextView6"
        android:layout_marginLeft="@dimen/top"
        android:layout_toRightOf="@id/TextView6"
        android:text="@string/time"
        android:textColor="@drawable/darkgrey"
        android:textSize="@dimen/top" />

    <TextView
        android:id="@+id/TextView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/TextView6"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/top"
        android:text="@string/tdtext"
        android:textSize="@dimen/top" />

    <EditText
        android:id="@+id/edtdtext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/TextView7"
        android:layout_toRightOf="@id/TextView7" />

    <TextView
        android:id="@+id/TextView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/TextView7"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="@string/tmtime"
        android:textSize="@dimen/top" />

    <TextView
        android:id="@+id/mtime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/TextView8"
        android:layout_toRightOf="@id/TextView8"         
        android:layout_marginLeft="@dimen/top"
        android:text="@string/time"
        android:textColor="@drawable/darkgrey"
        android:textSize="@dimen/top" />

    <TextView
        android:id="@+id/TextView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/TextView8"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/top"
        android:text="@string/tmtext"
        android:textSize="@dimen/top" />

    <EditText
        android:id="@+id/edtmtext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/TextView9"
        android:layout_toRightOf="@id/TextView9" />

    <TextView
        android:id="@+id/TextView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/TextView9"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="@string/tcoent"
        android:textSize="@dimen/top" />

    <EditText
        android:id="@+id/edtcoent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/TextView10"
        android:layout_toRightOf="@id/TextView10" />

    <Button
        android:id="@+id/btnadd"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_below="@id/TextView10"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:text="@string/tbtnadd" />

</RelativeLayout>